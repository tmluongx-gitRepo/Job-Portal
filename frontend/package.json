{
  "name": "job-portal-frontend",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.21",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow bun",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --max-warnings=0",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "bunx prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "bunx prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "cd .. && husky"
  },
  "dependencies": {
    "next": "^15.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "typescript": "^5.7.2",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.5",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
